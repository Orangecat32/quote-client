 
{
  "plugins": [

    "babel",
    "jsx-a11y",    
    "react" 
  ],
  "extends": [
    "airbnb",
    "plugin:jsx-a11y/recommended",
    "react-app",
    "plugin:react/recommended"
  ],  
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "jsx": true
      }
  },
  "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
  },   
  "rules": {
    "jsx-a11y/click-events-have-key-events": 1,
    "no-unused-vars": 1,
    "linebreak-style": 0,
    "comma-dangle": 0,
    "no-console": 1
  },
  "settings": {
    "react": {
        "createClass": "createReactClass", 
        "pragma": "React",  
        "version": "detect",                     
        "flowVersion": "0.53"
        },
        "propWrapperFunctions": [
            "forbidExtraProps",
            {"property": "freeze", "object": "Object"},
            {"property": "myFavoriteWrapper"}
        ]
    }
}




 
{
  "plugins": [
      "react",
      "relay",
      "prettier",
      "babel"
  ],
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "env": {
      "es6":     true,
      "browser": true,
      "node":    true,
      "mocha":   true
  },   
  "extends": [
      "google",
      "fbjs",
      "plugin:react/recommended",
      "plugin:prettier/recommended"
  ],    
  "rules": {
      "no-unused-vars": 1,
      "no-console": "off",
      "semi": 2,
      "arrow-parens": [0, "as-needed"],
      "max-len": [1, { "code": 120 }],
      "prettier/prettier": [
        "error", 
        { 
          "singleQuote": true, 
          "alwaysParens": "avoid", 
          "printWidth" : 200
        }
      ]
  },
  "settings": {
      "react": {
      "createClass": "createReactClass", 
      "pragma": "React",  
      "version": "detect",                     
      "flowVersion": "0.53"
      },
      "propWrapperFunctions": [
          "forbidExtraProps",
          {"property": "freeze", "object": "Object"},
          {"property": "myFavoriteWrapper"}
      ]
  }
}
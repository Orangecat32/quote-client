 
{
    "plugins": [
        "react",
        "relay",
        "babel"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6":     true,
        "browser": true,
        "node":    true,
        "mocha":   true
    },   
    "extends": [
        "google",
        "fbjs",

        "plugin:react/recommended"
    ],    
    "rules": {
        "no-unused-vars": 1,
        "no-console": "off",
        "max-len": 0
    },
    "settings": {
        "react": {
        "createClass": "createReactClass", 
        "pragma": "React",  
        "version": "detect",                     
        "flowVersion": "0.53"
        },
        "propWrapperFunctions": [
            "forbidExtraProps",
            {"property": "freeze", "object": "Object"},
            {"property": "myFavoriteWrapper"}
        ]
    }
}


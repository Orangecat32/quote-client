 
{
  "plugins": [
    "prettier",
    "babel",
    "jsx-a11y",    
    "react" 
  ],
  "extends": [
    "plugin:prettier/recommended",
    "plugin:jsx-a11y/recommended",
    "eslint:recommended",
    "react-app",
    "plugin:react/recommended"
  ],  
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "jsx": true
      }
  },
  "env": {
      "browser": true,
      "node": true,
      "jest": true
  },   
    
  "rules": {
    "jsx-a11y/click-events-have-key-events": 1,
    "jsx-a11y/jsx-a11y": 1,
    "strict": 2,
    "no-unused-vars": 1,
    "no-console": "off",
    "semi": 2,
    "max-len": 0
  },
  "settings": {
    "react": {
        "createClass": "createReactClass", 
        "pragma": "React",  
        "version": "detect",                     
        "flowVersion": "0.53"
        },
        "propWrapperFunctions": [
            "forbidExtraProps",
            {"property": "freeze", "object": "Object"},
            {"property": "myFavoriteWrapper"}
        ]
    }
}

